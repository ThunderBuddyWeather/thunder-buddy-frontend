{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "app/_layout.jsx",
    "App.jsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
